---
import { exhibitors, partners } from '@/data/logos'
import Sponsors from './Sponsors.astro'
import { t } from 'i18next'
import { Suscribe } from './Suscribe.jsx'
---

<footer class='bg-[url(/img/bg_footer_amof.webp)] bg-cover bg-no-repeat py-20'>
  <p class='font-bold uppercase text-4xl text-center mb-6 text-white'>
    {t('home.organized')}
  </p>
  <div class='mt-10 container mx-auto'>
    <div
      class='sm:flex grid gap-8 justify-center *:bg-white *:rounded-lg *:shadow-lg *:px-8 *:py-5 *:flex *:items-center'
    >
      <a href='https://www.iegexpo.it/en/' target='_blank' rel='noreferrer'>
        <img
          src='/img/italianExhibitionGroup.webp'
          width={120}
          loading='lazy'
          alt='italianExhibitionGroup'
        />
      </a>

      <a href='https://www.messe.de/en/' target='_blank' rel='noreferrer'>
        <img
          src='/img/deutscheMesse.webp'
          width={160}
          loading='lazy'
          alt='deutscheMesse'
        />
      </a>
    </div>
  </div>
  <p class='mt-20 font-bold uppercase text-4xl text-center mb-6 text-white'>
    {t('home.colaboration')}
  </p>
  <img
    src='/img/logo_INA-vertical.webp'
    alt='INA'
    class='w-44 mx-auto bg-white rounded-lg shadow-lg px-8 py-5 flex sitems-center'
  />
  <p class='mt-20 font-bold uppercase text-4xl text-center mb-6 text-white'>
    {t('home.allies')}
  </p>
  <div
    class='container mx-auto my-5 sm:flex justify-center grid gap-8 *:bg-white *:rounded-lg *:shadow-lg *:px-8 *:py-5 *:flex *:items-center'
  >
    <div>
      <img src='/img/logos/AMIVE.webp' alt='AMIVE' width='120' />
    </div>
    <div>
      <img src='/img/CLAUGTO-LOGO.webp' alt='CLAUGTO' width='150' />
    </div>
  </div>

  <div class='py-10 container mx-auto px-4'>
    <div class='my-12'>
      <p class='font-bold uppercase text-4xl text-center mb-6 text-white'>
        {t('home.exhibitors')}
      </p>
      <Sponsors logos={exhibitors} />
    </div>
  </div>
  <div class='py-10 container mx-auto px-4'>
    <p class='font-bold uppercase text-4xl text-center mb-6 text-white'>
      MEDIA PARTNERS
    </p>
    <Sponsors logos={partners} />
  </div>

  <div class='container mx-auto p-4 md:py-5 relative z-50 text-white'>
    <div class='md:flex grid gap-5'>
      <iframe
        src='https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15049.36402948315!2d-99.224085!3d19.440859!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d2022fe6949ce7%3A0x5d42bb0157a92f85!2sCentro%20Citibanamex!5e0!3m2!1ses!2smx!4v1733247911705!5m2!1ses!2smx'
        width='100%'
        height={260}
        loading='lazy'
        referrerpolicy='no-referrer-when-downgrade'
        title='mapa igeco'
      >
      </iframe>
      <div class='w-full text-center mx-auto' id='contactanos'>
        <p class='font-semibold text-5xl text-white uppercase'>
          {t('footer.title_contact')}
        </p>
        <p class='text-white mt-4 text-6xl font-light'>Paulina SÃ¡nchez</p>
        <p class='text-3xl font-light'>
          Sustainability Leader / Sales Executive
        </p>
        <div class='grid place-items-center'>
          <span class='flex gap-2 py-2 justify-center sm:justify-normal'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              fill='none'
              viewBox='0 0 24 24'
              stroke-width='1.5'
              stroke='currentColor'
              class='w-6 h-6'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z'
              ></path>
            </svg> +52 1 442 710 3765</span
          >
        </div>
      </div>
    </div>
    <div class='md:flex grid gap-4 items-center sm:justify-between pt-4'>
      <a
        class='flex gap-2 hover:underline justify-center sm:justify-normal font-bold'
        href='mailto:paulina.sanchez@igeco.mx'
        ><svg
          xmlns='http://www.w3.org/2000/svg'
          fill='none'
          viewBox='0 0 24 24'
          stroke-width='1.5'
          stroke='currentColor'
          class='w-6 h-6'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            d='M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75'
          ></path>
        </svg> paulina.sanchez@igeco.mx
      </a>

      <div id='contacto'>
        <Suscribe
          suscribe_label={t('footer.suscribe')}
          button={t('footer.button_suscribe')}
          client:only
        />
      </div>
    </div>
  </div>
  <hr class='border-gray-200 sm:mx-auto' />
  <div
    class='container mx-auto px-4 text-center py-5 md:flex grid gap-4 items-center justify-between'
  >
    <div class='text-left'>
      <p class='text-white'>
        Copyright Italian German Exhibition Company Mexico
      </p>
      <a
        href='https://igeco.mx/aviso-de-privacidad'
        target='_blank'
        rel='noopener noreferrer'
        class='text-white font-bold hover:underline'
      >
        {t('footer.privacy_policy')}
      </a>
    </div>
    <div class='flex items-center justify-between'>
      <div class='flex justify-center items-center my-4'>
        <a
          href='https://www.facebook.com/AmericasMobilityOfTheFuture'
          target='_blank'
        >
          <svg
            class='w-8 h-8 text-white hover:text-blue-800'
            aria-hidden='true'
            xmlns='http://www.w3.org/2000/svg'
            fill='currentColor'
            viewBox='0 0 24 24'
          >
            <path
              fill-rule='evenodd'
              d='M13.1 6H15V3h-1.9A4.1 4.1 0 0 0 9 7.1V9H7v3h2v10h3V12h2l.6-3H12V6.6a.6.6 0 0 1 .6-.6h.5Z'
              clip-rule='evenodd'></path>
          </svg>
        </a>
        <a
          href='https://www.instagram.com/americas.mobility.ofthefuture/'
          target='_blank'
        >
          <svg
            class='w-10 h-10 text-white hover:text-blue-800'
            xmlns='http://www.w3.org/2000/svg'
            x='0px'
            y='0px'
            width='100'
            height='100'
            viewBox='0,0,256,256'
          >
            <g
              fill='white'
              class='hover:fill-blue-800'
              fill-rule='nonzero'
              stroke='none'
              stroke-width='1'
              stroke-linecap='butt'
              stroke-linejoin='miter'
              stroke-miterlimit='10'
              stroke-dasharray=''
              stroke-dashoffset='0'
              font-family='none'
              font-weight='none'
              font-size='none'
              text-anchor='none'
              style='mix-blend-mode: normal'
            >
              <g transform='scale(8,8)'>
                <path
                  d='M11.46875,5c-3.55078,0 -6.46875,2.91406 -6.46875,6.46875v9.0625c0,3.55078 2.91406,6.46875 6.46875,6.46875h9.0625c3.55078,0 6.46875,-2.91406 6.46875,-6.46875v-9.0625c0,-3.55078 -2.91406,-6.46875 -6.46875,-6.46875zM11.46875,7h9.0625c2.47266,0 4.46875,1.99609 4.46875,4.46875v9.0625c0,2.47266 -1.99609,4.46875 -4.46875,4.46875h-9.0625c-2.47266,0 -4.46875,-1.99609 -4.46875,-4.46875v-9.0625c0,-2.47266 1.99609,-4.46875 4.46875,-4.46875zM21.90625,9.1875c-0.50391,0 -0.90625,0.40234 -0.90625,0.90625c0,0.50391 0.40234,0.90625 0.90625,0.90625c0.50391,0 0.90625,-0.40234 0.90625,-0.90625c0,-0.50391 -0.40234,-0.90625 -0.90625,-0.90625zM16,10c-3.30078,0 -6,2.69922 -6,6c0,3.30078 2.69922,6 6,6c3.30078,0 6,-2.69922 6,-6c0,-3.30078 -2.69922,-6 -6,-6zM16,12c2.22266,0 4,1.77734 4,4c0,2.22266 -1.77734,4 -4,4c-2.22266,0 -4,-1.77734 -4,-4c0,-2.22266 1.77734,-4 4,-4z'
                ></path>
              </g>
            </g>
          </svg>
        </a>
        <a
          href='https://www.linkedin.com/company/mobility-of-the-future/'
          target='_blank'
        >
          <svg
            class='w-10 h-10 text-white hover:text-blue-800'
            aria-hidden='true'
            xmlns='http://www.w3.org/2000/svg'
            fill='currentColor'
            viewBox='0 0 24 24'
          >
            <path
              fill-rule='evenodd'
              d='M12.5 8.8v1.7a3.7 3.7 0 0 1 3.3-1.7c3.5 0 4.2 2.2 4.2 5v5.7h-3.2v-5c0-1.3-.2-2.8-2.1-2.8-1.9 0-2.2 1.3-2.2 2.6v5.2H9.3V8.8h3.2ZM7.2 6.1a1.6 1.6 0 0 1-2 1.6 1.6 1.6 0 0 1-1-2.2A1.6 1.6 0 0 1 6.6 5c.3.3.5.7.5 1.1Z'
              clip-rule='evenodd'></path>
            <path d='M7.2 8.8H4v10.7h3.2V8.8Z'></path>
          </svg>
        </a>
      </div>

      <a
        href='http://igeco.mx/'
        target='_blank'
        class='grid grid-flow-col gap-2 place-items-center'
      >
        <img src='/img/igeco_bn.webp' alt='' ' width='100' />
        <img src='/img/deutsche_messe_bn.webp' alt='' width='150' />
      </a>
    </div>
  </div>
</footer>
