---
import { t } from 'i18next'
---

<section>
  <img
    src='/img/drone.webp'
    class='w-[50%] ms-auto relative md:-top-28 md:-right-32 z-0'
    alt='Charger AMOF'
  />
  <p class='text-[#252A3A] text-5xl font-extrabold uppercase text-center'>
    {t('home.follow_us')}
  </p>
  <p class='text-[#007bff] text-5xl font-extrabold uppercase text-center'>
    {t('home.follow_us_2')}
  </p>

  <div class='grid md:flex md:flex-wrap mt-5'>
    <img
      src='/img/siguenos1.webp'
      class='w-full md:w-1/3'
      alt='Americas mobility of the future - 1'
    />
    <img
      src='/img/siguenos2.webp'
      class='w-full md:w-1/3'
      alt='Americas mobility of the future - 2'
    />
    <img
      src='/img/siguenos3.webp'
      class='w-full md:w-1/3'
      alt='Americas mobility of the future - 3'
    />
